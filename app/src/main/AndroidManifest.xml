<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="learningunit.learningunit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Objects.PublicAPIs.AnalyticsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/mylogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mylogo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".menu.organizer.Organizer"
            android:label="@string/title_activity_organizer"></activity>
        <activity android:name=".menu.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".menu.organizer.timetable.TimetableShowcase"
            android:label="TimetableShowcase"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".beforeStart.FirstScreen" />
        <activity android:name=".beforeStart.Register" />
        <activity android:name=".menu.organizer.timetable.Timetable" />
        <activity android:name=".menu.learn.vocabulary.Vokabeln" />
        <activity android:name=".menu.learn.vocabulary.CreateVocList" />

        <meta-data
            android:name="preloaded_fonts"
            android:clearTaskOnLaunch="true"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>